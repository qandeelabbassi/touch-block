<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="24dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/info" />

    <View
        android:id="@+id/kids_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/kids_cont"
        android:layout_below="@id/img_info"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/circle_grayed" />

    <LinearLayout
        android:id="@+id/kids_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_info"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@id/kids_dot"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_kids_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KIDS MODE"
            android:textColor="#555555"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just locks when tapped and unlocks upon double tap."
            android:textColor="#555555"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/mom_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/mom_cont"
        android:layout_below="@id/kids_cont"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/circle_grayed" />

    <LinearLayout
        android:id="@+id/mom_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kids_cont"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/kids_dot"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOM MODE"
            android:textColor="#555555"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No way to unlock except by completion of the time or schedule that has been specified."
            android:textColor="#555555"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/pun_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/pun_cont"
        android:layout_below="@id/mom_cont"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/circle_grayed" />

    <LinearLayout
        android:id="@+id/pun_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mom_cont"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/kids_dot"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUNISHMENT MODE"
            android:textColor="#555555"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set a definite time and create a passcode. Device touch will be unlocked either on time completion or correct passcode provision."
            android:textColor="#555555"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>